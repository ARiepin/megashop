<h1>Заказ оформлен! Ожидайте, с вами свяжется наш консультант.</h1>
<table class="cart_table">
<% @order.line_items.each_with_index do |line_item, i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= line_item.product.name %></td>
        <td><%= line_item.quantity %></td>
        <td><%= line_item.price*line_item.quantity %></td>
      </tr>
<% end %>
  <tr>
    <td colspan="3">Итого</td>
    <td colspan="2"><%= @total_price %> грн.</td>
  </tr>
</table>